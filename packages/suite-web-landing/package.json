{
    "name": "@trezor/suite-web-landing",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "type-check": "tsc --build tsconfig.json",
        "type-check:watch": "yarn type-check -- --watch",
        "lint:js": "eslint '**/*.{ts,tsx,js}'",
        "copy-files": "yarn workspace @trezor/suite-data copy-static-files",
