    "dependencies": {
        "@suite-common/suite-config": "*",
        "@suite-common/suite-utils": "*",
        "@trezor/components": "*",
        "@trezor/react-utils": "*",
        "@trezor/suite": "*",
        "@trezor/urls": "*",
        "@trezor/utils": "*",
        "next": "^12.2.5",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-intl": "^6.0.5"
    },
    "devDependencies": {
        "@types/react": "^17.0.48",
        "@types/react-dom": "^17.0.17",
        "jest": "^26.6.3",
        "next-optimized-images": "^2.6.2",
        "next-transpile-modules": "^9.0.0",
        "typescript": "4.7.4"
    }
