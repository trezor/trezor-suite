{
    "compilerOptions": {
      "plugins": [
        {
          "name": "typescript-styled-plugin"
        }
      ],
      "baseUrl": "../src",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "module": "es2015",
      "target": "es5",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "allowJs": false,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDir": "../src",
      "outDir": "../lib",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "declaration": true,
      "types": ["react", "typescript"]
    },
    "include": [
      "../src/**/*"
    ],
    "exclude": [
      "node_modules",
      "build",
      "dist",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts",
      "**/*/*.test.ts",
      "examples"
    ]
  }