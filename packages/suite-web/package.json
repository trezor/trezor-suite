{
    "name": "@trezor/suite-web",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "preinstall": "yarn workspace @trezor/suite-data copy-static-files",
        "dev": "yarn workspace @trezor/suite-data copy-static-files && next",
        "lint": "eslint . --ext .tsx,.ts",
        "build": "next build && next export -o build",
        "start": "next start",
        "type-check": "tsc --project tsconfig.json",
        "type-check:watch": "yarn type-check -- --watch",
        "test:integration": "cypress run"
    },
    "dependencies": {
        "@sentry/browser": "^5.4.0",
        "@trezor/suite": "^1.0.0",
        "immer": "^3.1.3",
        "next": "^9.0.2",
        "next-redux-wrapper": "^3.0.0-alpha.2"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0",
        "@types/next": "^8.0.0",
        "@types/next-redux-wrapper": "^2.0.2",
        "@types/react": "^16.7.11",
        "@types/react-dom": "^16.0.11",
        "@types/react-native": "^0.57.41",
        "@types/react-redux": "^7.0.8",
        "cypress": "^3.4.1",
        "cypress-image-snapshot": "^3.0.1",
        "git-revision-webpack-plugin": "^3.0.3",
        "next-images": "^1.1.1",
        "next-plugin-custom-babel-config": "^1.0.0",
        "next-transpile-modules": "^2.0.0"
    }
}