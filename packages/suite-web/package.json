{
    "name": "@trezor/suite-web",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "type-check": "tsc --project tsconfig.json",
        "type-check:watch": "yarn type-check -- --watch",
        "lint": "eslint . --ext .tsx,.ts",
        "copy-files": "yarn workspace @trezor/suite-data copy-static-files",
        "dev": "yarn workspace @trezor/suite-data copy-static-files && next -p 8001",
        "build:app": "next build && next export -o build",
        "build": "run-s copy-files build:app",
        "test:integration": "cypress run",
        "test:integration:local:open": "CYPRESS_defaultCommandTimeout=60000 concurrently --success first --kill-others  \"python3 ./test/plugins/python/main.py\" \"wait-on --timeout 120000 http://localhost:8001 && cypress open --config baseUrl=http://localhost:8001 --browser chrome\"",
        "test:integration:local:run": "CYPRESS_defaultCommandTimeout=60000 concurrently --success first --kill-others \"yarn dev\" \"python3 ./test/plugins/python/main.py\" \"wait-on --timeout 120000 http://localhost:8001 && cypress run --config baseUrl=http://localhost:8001 --browser chrome\"",
        "test:integration:ci:run": "concurrently --success first --kill-others \"python3 ./test/plugins/python/main.py\" \"cypress run --browser chrome\""
    },
    "dependencies": {
        "@sentry/browser": "^5.4.0",
        "@trezor/suite": "^1.0.0",
        "next": "^9.1.4",
        "next-redux-wrapper": "^4.0.1"
    },
    "devDependencies": {
        "@cypress/webpack-preprocessor": "^4.1.1",
        "@types/next": "^9.0.0",
        "@types/next-redux-wrapper": "^3.0.0",
        "@types/react": "^16.7.11",
        "@types/react-dom": "^16.0.11",
        "@types/react-redux": "^7.0.8",
        "cypress": "^3.4.1",
        "cypress-image-snapshot": "^3.1.1",
        "git-revision-webpack-plugin": "^3.0.4",
        "next-images": "^1.2.0",
        "next-plugin-custom-babel-config": "^1.0.2",
        "next-transpile-modules": "^2.3.1",
        "ts-loader": "^6.2.1"
    }
}
