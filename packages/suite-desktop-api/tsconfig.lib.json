{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "outDir": "./lib",
        "strict": true,
        "declaration": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noErrorTruncation": true,
        "types": ["jest", "node"]
    },
    "include": ["./src/main.ts", "./src/renderer.ts"],
    "exclude": ["node_modules"]
}
