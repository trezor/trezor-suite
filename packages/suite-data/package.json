{
    "name": "@trezor/suite-data",
    "version": "1.0.0",
    "private": true,
    "author": "Trezor <info@trezor.io>",
    "keywords": [
        "Trezor",
        "trezor-data"
    ],
    "license": "SEE LICENSE IN LICENSE.md",
    "description": "Trezor data",
    "scripts": {
        "build:lib": "yarn browser-detection && yarn guide-pull-content",
        "browser-detection": "webpack --config ./browser-detection.webpack.ts",
        "guide-pull-content": "tsx ./src/guide/index.ts",
        "type-check": "tsc --build tsconfig.json"
    },
    "dependencies": {
        "@suite-common/suite-types": "*",
        "@trezor/urls": "*",
        "@trezor/utils": "*",
        "ua-parser-js": "^1.0.32"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/ua-parser-js": "^0.7.36",
        "autoprefixer": "^10.4.8",
        "babel-loader": "^9.1.0",
        "css-loader": "^6.7.2",
        "fs-extra": "^10.1.0",
        "jest": "^26.6.3",
        "postcss-loader": "^7.0.1",
        "postcss-modules-extract-imports": "^3.0.0",
        "postcss-modules-local-by-default": "^4.0.0",
        "postcss-modules-scope": "^3.0.0",
        "postcss-modules-values": "^4.0.0",
        "simple-git": "^3.15.0",
        "style-loader": "^3.3.1",
        "tsx": "^3.8.2",
        "typescript": "4.9.3",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.0"
    },
    "nx": {
        "targets": {
            "build:lib": {
                "outputs": [
                    "./tmp",
                    "./files/browser-detection",
                    "./files/guide"
                ]
            }
        }
    }
}
