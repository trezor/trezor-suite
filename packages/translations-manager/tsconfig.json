{
    "compilerOptions": {
        "target": "es2017",
        "module": "CommonJS",
        "lib": ["es2019", "dom"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "outDir": "./lib"
    },
    "include": ["./src"],
    "exclude": [
        "node_modules",
        "**/node_modules",
        "**/lib",
        "**/build",
        "**/api/generated/**/*.*",
        "**/_old/**/*.*",
        ".next"
    ]
}
