{
    "name": "@trezor/components",
    "version": "1.0.0",
    "main": "lib/index.js",
    "repository": "https://github.com/trezor/trezor-ui-components",
    "author": "SatoshiLabs s.r.o.",
    "license": "SEE LICENSE IN LICENSE.md",
    "scripts": {
        "lint": "run-s lint:*",
        "lint:js": "eslint . --ext .tsx,.ts",
        "lint:styles": "npx stylelint './src/**/*{.tsx,.ts}'",
        "lint-fix": "npx eslint ./src --fix",
        "storybook": "start-storybook -s ./public -p 9001 -c .storybook",
        "build": "build-storybook -s ./public -c .storybook -o /build",
        "build:lib": "rm -rf lib && npx babel --extensions '.ts,.tsx' src -d lib && babel-node ./scripts/build.js && yarn tsc -p tsconfig.json",
        "type-check": "tsc --project tsconfig.types.json",
        "type-check:watch": "yarn type-check -- --watch",
        "prepublishOnly": "npm run build:lib",
        "ci:test:snapshots": "cypress run",
        "ci:test:snapshots:references": "cypress run --env updateSnapshots=true customSnapshotsDir=./snapshots"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.2.2",
        "@babel/node": "^7.2.2",
        "@babel/plugin-proposal-class-properties": "^7.3.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
        "@babel/plugin-transform-runtime": "^7.2.0",
        "@babel/preset-env": "^7.3.1",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@types/react-router-dom": "^4.3.3",
        "@types/react-select": "^2.0.17",
        "@types/react-textarea-autosize": "^4.3.4",
        "@types/styled-components": "^4.1.15",
        "@typescript-eslint/eslint-plugin": "^1.6.0",
        "@typescript-eslint/parser": "^1.6.0",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.5",
        "babel-plugin-styled-components": "^1.10.0",
        "eslint": "^5.13.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^4.1.0",
        "eslint-import-resolver-typescript": "^1.1.1",
        "eslint-plugin-cypress": "^2.2.1",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-jsx-a11y": "^6.1.2",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-react": "^7.12.3",
        "fs-extra": "^7.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.16.4",
        "prettier-eslint": "^8.8.2",
        "react-docgen-typescript-loader": "^3.1.0",
        "start-server-and-test": "^1.9.0",
        "stylelint": "^9.9.0",
        "stylelint-config-recommended": "^2.1.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-custom-processor-loader": "^0.6.0",
        "stylelint-processor-styled-components": "^1.5.2",
        "typescript": "^3.5.1",
        "typescript-styled-plugin": "^0.14.0",
        "wait-on": "^3.2.0"
    },
    "dependencies": {
        "@tippy.js/react": "^2.1.1",
        "@types/storybook__addon-info": "^4.1.1",
        "@types/storybook__addon-knobs": "^4.0.5",
        "@types/storybook__addon-links": "^3.3.4",
        "@types/storybook__react": "^4.0.1",
        "prop-types": "^15.7.2",
        "react-native-svg": "^9.4.0",
        "react-select": "^2.4.3",
        "react-switch": "^5.0.0",
        "react-textarea-autosize": "^7.1.0"
    },
    "peerDependencies": {
        "react": "^16.8",
        "react-dom": "^16.8",
        "react-native": "^0.59.4",
        "react-router-dom": "^5.0.0",
        "styled-components": "^4.1.3"
    }
}
