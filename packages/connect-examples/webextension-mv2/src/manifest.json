{
    "name": "@trezor/connect web extension mv2 example",
    "version": "1.0.0",
    "manifest_version": 2,
    "icons": {
        "48": "icon48.png"
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "notifications",
        "*://connect.trezor.io/9/*",
        "*://suite.corp.sldev.cz/*"
    ],
    "background": {
        "scripts": ["./vendor/trezor-connect.js", "background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://connect.trezor.io/9/popup.html", "*://suite.corp.sldev.cz/*"],
            "js": ["./vendor/trezor-content-script.js"]
        }
    ],
    "web_accessible_resources": ["icon48.png"]
}
