{
    "name": "TrezorConnect",
    "version": "1",
    "manifest_version": 2,
    "applications": {
        "gecko": {
            "id": "trezor-connect@trezor.io",
            "strict_min_version": "53a1"
        }
    },

    "icons": {
        "48": "icons/48.png"
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": "icons/48.png"
    },

    "permissions": ["tabs", "notifications", "*://connect.trezor.io/9/*"],

    "background": {
        "scripts": ["vendor/trezor-connect.js", "background/index.js"]
    },

    "content_scripts": [
        {
            "matches": ["*://connect.trezor.io/9/popup.html"],
            "js": ["./node_modules/@trezor/connect-web/lib/webextension/trezor-content-script.js"]
        }
    ],

    "web_accessible_resources": ["icons/48.png"]
}
