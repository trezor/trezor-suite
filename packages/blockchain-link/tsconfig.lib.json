{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "lib": ["dom"],
        "outDir": "./lib",
        "strict": true,
        "declaration": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "types": ["jest", "node"],
        "useUnknownInCatchVariables": false
    },
    "include": ["./src/index.ts", "./src/utils/ws.ts"],
    "exclude": ["node_modules"]
}