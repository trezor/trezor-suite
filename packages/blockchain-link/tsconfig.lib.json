{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["dom", "es2015"],
        "outDir": "./lib",
        "strict": true,
        "declaration": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "removeComments": true,
        "types": ["jest", "node"],
        "esModuleInterop": true,
        "useUnknownInCatchVariables": false
    },
    "include": ["./src/index.ts", "./src/utils/ws.ts"],
    "exclude": ["node_modules"]
}