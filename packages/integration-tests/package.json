{
    "name": "@trezor/integration-tests",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "lint": "eslint '**/*.{ts,tsx,js}'",
        "test:transport": "jest --verbose -c ./projects/transport/jest.config.js --runInBand",
        "test:desktop": "xvfb-maybe -- playwright test --config=./projects/suite-desktop/playwright.config.ts",
        "test:connect-explorer": "xvfb-maybe -- playwright test --config=./projects/connect-explorer/playwright.config.ts",
        "test:connect-iframe": "xvfb-maybe ./node_modules/.bin/karma start projects/connect-iframe/karma.config.production.js"
    },
    "dependencies": {
        "cypress": "9.5.1",
        "express": "^4.17.3",
        "ts-loader": "^9.2.7",
        "webpack": "^5.70.0"
    },
    "devDependencies": {
        "@cypress/skip-test": "^2.6.1",
        "@cypress/webpack-preprocessor": "^5.11.1",
        "@playwright/test": "^1.19.1",
        "@trezor/transport": "1.1.2",
        "@trezor/utils": "1.0.1",
        "chrome-remote-interface": "^0.31.2",
        "cypress-image-snapshot": "^4.0.1",
        "cypress-wait-until": "^1.7.2",
        "karma-babel-preprocessor": "^8.0.2",
        "karma-chrome-launcher": "^3.1.0",
        "karma-coverage": "^2.2.0",
        "karma-jasmine-async": "^0.0.1",
        "karma-jasmine": "4.0.1",
        "karma-sourcemap-loader": "^0.3.8",
        "karma-webpack": "^5.0.0",
        "karma": "^6.3.16",
        "playwright": "^1.19.1",
        "shelljs": "^0.8.5",
        "ws": "^7.5.5",
        "xvfb-maybe": "^0.2.1"
    }
}
