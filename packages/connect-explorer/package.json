{
    "name": "@trezor/connect-explorer",
    "version": "1.0.0",
    "private": true,
    "description": "Explore Trezor integration possibilities and docs in connect explorer interface",
    "scripts": {
        "lint": "eslint . --ext .tsx,.ts",
        "type-check": "tsc --project tsconfig.json",
        "type-coverage": "type-coverage --at-least 90 --strict",
        "dev": "webpack-dev-server --config ./webpack/dev.babel.js --mode development",
        "dev:local": "cross-env LOCAL=true webpack-dev-server --progress --colors --config ./webpack/local.babel.js --mode development --bail",
        "build": "rm -rf build && webpack --config ./webpack/prod.babel.js --progress",
        "ci:test:snapshots": "cypress run",
        "ci:test:snapshots:references": "cypress run --env updateSnapshots=true customSnapshotsDir=./snapshots"
    },
    "dependencies": {
        "@trezor/components": "1.0.0",
        "connected-react-router": "6.6.1",
        "markdown-it": "^8.4.2",
        "markdown-it-link-attributes": "^2.1.0",
        "markdown-it-replace-link": "^1.0.1",
        "react-infinity-menu": "^4.0.0",
        "react-inspector": "^2.3.1",
        "react-json-tree": "^0.11.0",
        "react-transition-group": "^2.3.1",
        "stringify-object": "^3.3.0",
        "trezor-connect": "8.0.11-extended"
    },
    "devDependencies": {
        "@cypress/webpack-preprocessor": "^4.1.1",
        "babel-loader": "^8.0.0",
        "copy-webpack-plugin": "5.0.5",
        "cross-env": "^6.0.3",
        "css-loader": "3.2.0",
        "file-loader": "^5.0.2",
        "html-webpack-plugin": "^3.2.0",
        "less": "^3.10.3",
        "less-loader": "^5.0.0",
        "mini-css-extract-plugin": "^0.8.0",
        "react-hot-loader": "4.12.18",
        "styled-components": "^4.3.2",
        "type-coverage": "^2.3.1",
        "webpack": "4.41.2",
        "webpack-cli": "3.3.10",
        "webpack-dev-server": "3.9.0"
    }
}
