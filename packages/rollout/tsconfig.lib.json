{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["dom", "es2015"],
        "outDir": "./lib",
        "strict": true,
        "declaration": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "preserveSymlinks": true, // ts-node: "Unable to require `.d.ts` file." (https://github.com/TypeStrong/ts-node/issues/797)
        "removeComments": true,
        "types": ["jest", "node"],
        "esModuleInterop": true,
        "skipLibCheck": true,
    },
    "include": ["./src/index.ts"],
    "exclude": [
        "node_modules",
        "**/__tests__/**",
        "**/__mocks__/**",
        "**/*.test.ts"
    ]
}
