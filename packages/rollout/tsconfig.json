{
    "compileOnSave": false,
    "compilerOptions": {
        "lib": ["dom", "es2015"],
        "strict": true,
        "preserveSymlinks": true, // ts-node: "Unable to require `.d.ts` file." (https://github.com/TypeStrong/ts-node/issues/797)
        "removeComments": true,
        "types": ["jest", "node"],
        "declaration": true,
        "declarationDir": "./lib",
        "noImplicitAny": false,
        "outDir": "./lib",
        "target": "es3",
        "rootDir": "src",
    },
    "include": ["src/**/*"],
    "exclude": [
        "**/tests/**",
        "node_modules",
        "lib",
    ]
}