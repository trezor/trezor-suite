{
    "name": "@trezor/connect",
    "version": "9.0.2",
    "author": "Trezor <info@trezor.io>",
    "homepage": "https://github.com/trezor/trezor-suite/tree/develop/packages/connect",
    "description": "High-level javascript interface for Trezor hardware wallet.",
    "license": "SEE LICENSE IN LICENSE.md",
    "repository": {
        "type": "git",
        "url": "git://github.com/trezor/trezor-suite.git"
    },
    "bugs": {
        "url": "https://github.com/trezor/trezor-suite/issues"
    },
    "keywords": [
        "Trezor",
        "trezor-connect",
        "javascript"
    ],
    "sideEffects": false,
    "main": "lib/index",
    "browser": {
        "./lib/index": "./lib/index-browser",
        "./lib/utils/assets": "./lib/utils/assets-browser",
        "./lib/workers/workers": "./lib/workers/workers-browser"
    },
    "react-native": {
        "./lib/index": "./lib/index",
        "./lib/workers/workers": "./lib/workers/workers-react-native",
        "./lib/utils/assets": "./lib/utils/assets-native"
    },
    "files": [
        "lib/",
        "!**/*.map"
    ],
    "scripts": {
        "lint:js": "yarn g:eslint '**/*.{ts,tsx,js}'",
        "test:unit": "jest",
        "type-check": "tsc --build",
        "build:lib": "rimraf ./lib && yarn tsc --build tsconfig.lib.json",
        "version:beta": "tsx scripts/bump-version.ts prerelease",
        "version:patch": "tsx scripts/bump-version.ts patch",
        "version:minor": "tsx scripts/bump-version.ts minor",
        "version:major": "tsx scripts/bump-version.ts major",
        "test:e2e:node": "TESTS_FIRMWARE=$(tsx ../integration-tests/wait-for-env.ts) yarn jest --runInBand --verbose -c e2e/jest.config.js",
        "test:e2e:web": "TESTS_FIRMWARE=$(tsx ../integration-tests/wait-for-env.ts) yarn karma start e2e/karma.config.js"
    },
    "dependencies": {
        "@trezor/blockchain-link": "^2.1.4",
        "@trezor/connect-common": "0.0.9",
        "@trezor/transport": "^1.1.4",
        "@trezor/utils": "^9.0.2",
        "@trezor/utxo-lib": "^1.0.0",
        "bignumber.js": "^9.1.0",
        "blakejs": "^1.2.1",
        "bowser": "^2.11.0",
        "cross-fetch": "^3.1.5",
        "events": "^3.3.0",
        "parse-uri": "1.0.7",
        "randombytes": "2.1.0",
        "tslib": "^2.3.1"
    },
    "devDependencies": {
        "@trezor/trezor-user-env-link": "*",
        "@types/parse-uri": "^1.0.0",
        "@types/randombytes": "^2.0.0",
        "jest": "^26.6.3",
        "karma": "^6.3.16",
        "karma-babel-preprocessor": "^8.0.2",
        "karma-chrome-launcher": "^3.1.0",
        "karma-jasmine": "4.0.1",
        "karma-jasmine-async": "^0.0.1",
        "karma-sourcemap-loader": "^0.3.8",
        "karma-webpack": "^5.0.0",
        "rimraf": "^3.0.2",
        "tsx": "^3.8.2",
        "typescript": "4.7.4"
    }
}
