{
    "name": "@trezor/components-storybook",
    "private": true,
    "version": "1.0.0",
    "repository": "https://github.com/trezor/trezor-ui-components",
    "author": "SatoshiLabs s.r.o.",
    "license": "SEE LICENSE IN LICENSE.md",
    "scripts": {
        "lint": "yarn lint:styles && yarn lint:js",
        "lint:js": "eslint . --ext .tsx,.ts",
        "lint:styles": "npx stylelint './src/**/*.tsx'",
        "lint-fix": "npx eslint ./src --fix",
        "storybook": "start-storybook -s ./public -p 9001 -c .storybook",
        "build": "build-storybook -s ./public -c .storybook -o .build",
        "type-check": "tsc --project tsconfig.types.json",
        "type-check:watch": "yarn type-check -- --watch",
        "ci:test:snapshots": "cypress run",
        "ci:test:snapshots:references": "cypress run --env updateSnapshots=true customSnapshotsDir=./snapshots",
        "ci:test:open": "cypress open"
    },
    "dependencies": {
        "@trezor/components": "^1.0.0",
        "@types/react-router-dom": "^4.3.3",
        "@types/react-select": "^2.0.17",
        "@types/react-textarea-autosize": "^4.3.5",
        "@types/storybook__addon-info": "^5.2.1",
        "@types/styled-components": "^4.1.15",
        "awesome-typescript-loader": "^5.2.1",
        "fs-extra": "^7.0.1",
        "npm-run-all": "^4.1.5",
        "react": "16.9.0",
        "react-docgen-typescript-loader": "^3.6.0",
        "react-dom": "16.9.0",
        "react-router-dom": "^5.1.2",
        "start-server-and-test": "^1.10.6",
        "styled-components": "5.0.0-rc.2",
        "typescript-styled-plugin": "^0.15.0",
        "wait-on": "^3.3.0"
    },
    "devDependecies": {
        "@storybook/addon-actions": "^5.2.8",
        "@storybook/addon-centered": "^5.2.8",
        "@storybook/addon-info": "5.2.8",
        "@storybook/addon-knobs": "^5.2.8",
        "@storybook/addon-links": "^5.2.8",
        "@storybook/addon-options": "^5.2.8",
        "@storybook/addon-viewport": "^5.2.8",
        "@storybook/addons": "^5.2.8",
        "@storybook/react": "^5.2.8",
        "stylelint": "^12.0.0",
        "stylelint-config-recommended": "^3.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-custom-processor-loader": "^0.6.0",
        "stylelint-processor-styled-components": "^1.9.0",
        "babel-loader": "^8.0.5",
        "babel-plugin-styled-components": "^1.10.6",
        "cypress": "^3.4.1",
        "cypress-image-snapshot": "^3.0.1"
    }
}
