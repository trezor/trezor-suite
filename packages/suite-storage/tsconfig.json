{
    // "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es5",
        "module": "commonjs", // jest in suite has a problem with es2015, idk why
        "lib": ["es2015", "dom"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "jsx": "react",
        "outDir": "./lib"
    },
    "include": ["./src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
