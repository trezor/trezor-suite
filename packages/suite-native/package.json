{
    "name": "@trezor/suite-native",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "preinstall": "yarn workspace @trezor/suite-data copy-static-files",
        "dev:ios": "run-p start run-ios",
        "run-ios": "yarn install-pods && react-native run-ios --no-packager",
        "install-pods": "cd ./ios/ && pod install",
        "dev:android": "run-p start run-android",
        "run-android": "react-native run-android --no-packager",
        "start": "yarn react-native start --projectRoot ../../ --config ./metro.config.js",
        "start:clean": "yarn workspace @trezor/suite-native clean && yarn workspace @trezor/suite-native start -- --reset-cache",
        "clean": "watchman watch-del-all && rm -rf $TMPDIR/react-native-packager-cache-* && rm -rf $TMPDIR/metro-bundler-cache-*",
        "lint": "eslint '**/*{.ts,.tsx}'",
        "type-check": "tsc --project tsconfig.json",
        "postinstall": "sed -e 's:node ./node_modules/react-native/cli.js config:node \" + root + \"/../../node_modules/react-native/cli.js config:g' -i.bak ../../node_modules/@react-native-community/cli-platform-android/native_modules.gradle",
        "bundle:android": "yarn workspace @trezor/suite-native react-native bundle --entry-file packages/suite-native/index.js --bundle-output ./android/app/src/main/assets/index.android.bundle --assets-dest ./android/app/src/main/res --platform android --dev false",
        "build:android": "rimraf packages/suite-native/android/app/build && yarn workspace @trezor/suite-native bundle:android --reset-cache && cd ./android && ./gradlew bundleRelease -x bundleReleaseJsAndAssets --no-build-cache && ./gradlew assembleRelease -x bundleReleaseJsAndAssets --no-build-cache"
    },
    "dependencies": {
        "@trezor/components": "^1.0.0",
        "@trezor/suite-storage": "^1.0.0",
        "react": "16.8.6",
        "react-native": "0.60.6",
        "react-native-router-flux": "^4.0.6",
        "react-redux": "^7.0.3",
        "redux": "^4.0.1",
        "redux-thunk": "^2.3.0"
    },
    "devDependencies": {
        "@babel/core": "7.6.2",
        "@babel/runtime": "7.6.2",
        "@types/react": "^16.8.13",
        "@types/react-native": "^0.57.45",
        "metro-react-native-babel-preset": "^0.54.1",
        "typescript": "^3.4.3"
    }
}
