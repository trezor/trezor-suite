{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "./lib",
        "strict": true,
        "declaration": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noErrorTruncation": true,
        "types": ["jest", "node"]
    },
    "include": ["./src/index.ts", "./src/global.d.ts"],
    "exclude": [
        "node_modules",
        "**/__tests__/**",
        "**/__fixtures__/**",
        "**/*.test.ts"
    ]
}
