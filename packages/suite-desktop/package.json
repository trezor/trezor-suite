{
    "name": "@trezor/suite-desktop",
    "description": "Trezor Suite desktop application",
    "version": "20.12.0",
    "private": true,
    "author": "SatoshiLabs <info@satoshilabs.com>",
    "homepage": "https://trezor.io/",
    "main": "dist/electron.js",
    "scripts": {
        "dev": "yarn copy-files && yarn build:lib && electron .",
        "clean": "rimraf ./build-electron && rimraf ./build && rimraf ./dist",
        "copy-files": "yarn workspace @trezor/suite-data copy-static-files",
        "build:lib": "tsc --project src-electron/tsconfig.json",
        "build:desktop": "rimraf ./build && next build && next export -o build && yarn build:lib",
        "build:mac": "yarn clean && yarn build:desktop && electron-builder --mac --x64 -p never",
        "build:linux": "yarn clean && yarn build:desktop && electron-builder --linux --x64 --arm64 -p never",
        "build:win": "yarn clean && yarn build:desktop && electron-builder --win --x64 -p never",
        "publish:all": "yarn clean && yarn build:desktop && electron-builder --publish always --mac --linux --win",
        "publish:linux": "yarn build:linux && electron-builder --publish always --linux",
        "publish:mac": "yarn build:mac && electron-builder --publish always --mac",
        "publish:win": "yarn build:win && electron-builder --publish always --win",
        "lint": "eslint '**/*{.ts,.tsx}'",
        "type-check": "tsc --project tsconfig.json",
        "test:unit": "jest"
    },
    "build": {
        "appId": "io.trezor.TrezorSuite",
        "productName": "Trezor Suite",
        "copyright": "Copyright Â© ${author}",
        "asar": true,
        "electronVersion": "10.1.0",
        "directories": {
            "output": "build-electron"
        },
        "files": [
            "build/**/*",
            "!build/static/bin/**/*",
            "dist/**/*.js",
            "!dist/__**",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "build/static/images/icons/512x512.png",
                "to": "images/icons/512x512.png"
            }
        ],
        "publish": {
            "provider": "github",
            "repo": "trezor-suite",
            "owner": "trezor"
        },
        "dmg": {
            "sign": false,
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ],
            "background": "build/static/images/icons/background.tiff"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "files": [
                "entitlements.mac.inherit.plist"
            ],
            "extraResources": [
                {
                    "from": "build/static/bin/bridge/mac-${arch}",
                    "to": "bin/bridge"
                },
                {
                    "from": "build/static/bin/tor/mac-${arch}",
                    "to": "bin/tor"
                }
            ],
            "icon": "build/static/images/icons/512x512.icns",
            "artifactName": "Trezor-Suite-${version}-mac-${arch}.${ext}",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "darkModeSupport": false,
            "entitlements": "entitlements.mac.inherit.plist",
            "entitlementsInherit": "entitlements.mac.inherit.plist",
            "target": [
                "zip",
                "dmg"
            ]
        },
        "win": {
            "extraResources": [
                {
                    "from": "build/static/bin/bridge/win-${arch}",
                    "to": "bin/bridge"
                },
                {
                    "from": "build/static/bin/tor/win-${arch}",
                    "to": "bin/tor"
                }
            ],
            "icon": "build/static/images/icons/512x512.png",
            "artifactName": "Trezor-Suite-${version}-win-${arch}.${ext}",
            "target": [
                "nsis"
            ]
        },
        "linux": {
            "extraResources": [
                {
                    "from": "build/static/bin/bridge/linux-${arch}",
                    "to": "bin/bridge"
                },
                {
                    "from": "build/static/bin/tor/linux-${arch}",
                    "to": "bin/tor"
                }
            ],
            "icon": "build/static/images/icons/512x512.png",
            "artifactName": "Trezor-Suite-${version}-linux-${arch}.${ext}",
            "executableName": "trezor-suite",
            "category": "Utility",
            "target": [
                "AppImage"
            ]
        },
        "afterSign": "scripts/notarize.js"
    },
    "dependencies": {
        "electron-is-dev": "^1.2.0",
        "electron-localshortcut": "^3.2.1",
        "electron-next": "^3.1.5",
        "electron-store": "^5.1.1",
        "electron-updater": "^4.3.5",
        "node-fetch": "^2.6.1"
    },
    "devDependencies": {
        "@sentry/browser": "^5.16.0",
        "@sentry/integrations": "^5.16.0",
        "@types/electron-localshortcut": "^3.1.0",
        "@types/next": "^9.0.0",
        "@types/next-redux-wrapper": "^3.0.0",
        "@types/react": "^16.7.11",
        "@types/react-dom": "^16.0.11",
        "@types/react-redux": "^7.1.7",
        "@zeit/next-workers": "^1.0.0",
        "babel-plugin-styled-components": "1.11.1",
        "electron": "^10.1.0",
        "electron-builder": "^22.7.0",
        "electron-notarize": "^1.0.0",
        "git-revision-webpack-plugin": "^3.0.6",
        "next": "^9.5.3",
        "next-plugin-custom-babel-config": "^1.0.4",
        "next-redux-wrapper": "^5.0.0",
        "next-transpile-modules": "^2.3.1",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "styled-components": "5.1.1",
        "worker-loader": "^3.0.5"
    }
}
