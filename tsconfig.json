{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "jsx": "preserve",
        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "esnext",
        "noErrorTruncation": true,
        "useUnknownInCatchVariables": false,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "types": ["jest", "node"],
        "esModuleInterop": true,

        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "noEmit": false
    },
    "exclude": [
        "**/node_modules",
        "**/lib",
        "**/libDev",
        "**/build",
        "**/build-electron",
        "**/dist",
        "**/coverage",
        "**/public",
        "**/protobuf-patches",
        "**/trezor-common"
    ]
}
